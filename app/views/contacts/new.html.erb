<h1><%= t('contacts.contact_us') %></h1>
<%= new_article_path %>
<%= new_user_registration_path %>
<%= form_for :contact, url: contacts_path do |f| %>
	<% if @contact && @contact.errors.any? %>
	<p>
		<ul>
		<% @contact.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</p>
	<% end %>
	<p>
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</p>	
	<p>
		<%= f.label :message %><br/>
		<%= f.text_area :message %>
	</p>	
	<p>
		<%= f.submit "Send message"%><br/>

	</p>
<% end %>