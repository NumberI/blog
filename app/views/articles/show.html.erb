<h2>
<%= @article.title %>
</h2>
<p>
<%= @article.text %>
</p>
<%= @s  %>
<div>
<h3>
	Comments:
</h3>
<% @article.comments.each do |f| %>
	<p>
	<i>
		<%= f.author %> said:<br/>
	</i>
	</p>	
	<p>
	<label>
		<%= f.body %><br/>
	</label>
	</p>
	<hr />
<% end %>
</div >
<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br/>
		<%= f.text_field :author %>
	</p>	
	<p>
		<%= f.label :body %><br/>
		<%= f.text_area :body %>
	</p>	
	<p>
		<%= f.submit %><br/>

	</p>
<% end %>