<h1><%= t('article.new') %></h1>

<%= form_for :article, url: article_path(@article), method: :put do |f| %>
	<p>
		<%= f.label t('article.title') %><br/>
		<%= f.text_field :title %>
	</p>	
	<p>
		<%= f.label t('article.text') %><br/>
		<%= f.text_area :text %>
	</p>	
	<p>
		<%= f.submit t('article.save') %><br/>

	</p>
<% end %>